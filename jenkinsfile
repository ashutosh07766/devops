pipeline {
     agent any
      tools {
         nodejs 'Node 23' 
     }
     
     stages {
         stage('Clone Repository') {
             steps {
                 git 'https://github.com/ashutosh07766/devops'
             }
         }
         
         stage('Install Dependencies') {
             steps {
                 sh 'npm install'
             }
         }
             stage('Build')
            {
                steps{
                    sh 'npm run build'
                }

            }
         
         
         stage('Run Tests') {
             steps {
                 sh 'npm test || echo "No tests defined"'
             }
         }
         
    //      stage('Build Docker Image') {
    //          steps {
    //              sh 'docker build -t node-app .' 
    //          }
    //      }
    //  }
 }
}